Name: chat-api                                      # 项目名称
Host: 0.0.0.0                                       # 项目监听地址
Port: 8888                                          # 项目监听端口

Mysql:
    DataSource: chat:Chat-gpt~wechat@tcp(mysql81:3306)/chat?charset=utf8mb4&parseTime=true&loc=Asia%2FShanghai # 数据库连接地址

RedisCache:
  - Host: redis7:6379                               # redis缓存地址
    Pass: "Chat-gpt~wechat"                        # redis缓存密码

WeCom:
  CorpID: "wwxxxxxxxxxxxxxxxxxxxx"                  # 企业微信CorpID
  DefaultAgentSecret: "55sO-xxxxxxxxxxxxxxxxxxU"    # 企业微信应用 Secret
  Token: "xxxxxxxxxx"                               # 企业微信应用/客服消息 Token
  EncodingAESKey: "xxxxxxxxxxxxxxxx"                # 企业微信应用/客服消息 EncodingAESKey
  Model: "gpt-3.5-turbo-16k"                        # openai 模型（可选）默认为 gpt-3.5-turbo 可选[gpt-3.5-turbo-16k, gpt-4,gpt-4-32k, text-davinci-003]

OpenAi:
  Key: "xxxxxxxxxxxxxxxxxxxxx"                      # OpenAi Key
  MaxToken: 7500                                    # 一次会话能响应内容的最大 token
  TotalToken: 15800                                 # 一次对话 openai 能处理的最大 token 数量 gpt3-3.5-turbo:4096 gpt-3.5-turbo-16k:16384 / gpt-4:8192 /gpt-4-32k:32768
  Temperature: 0.8                                  # 对话的创造性，当其逼近与0时，其响应的结果更加死板，当其趋近于1时，其对话更加符有跳跃与创造力

Response:                                           # 回复配置
    Stream: true                                    # 是否开启流式回复,自动断句（可选）

ModelProvider:                                      # 服务提供者 可选择 openai 与 gemini  默认为 openai
  Company: "openai"                                 # openai / gemini

Gemini:
  Key: "AIzaxxxxx-xxxxx"                            # gemini key
  Temperature: 0.8                                  # 对话的创造性，当其逼近与0时，其响应的结果更加死板，当其趋近于1时，其对话更加符有跳跃与创造力
  Prompt: "# 角色
你是ChatGPT，一个由OpenAI训练的大型语言模型。你的目标是解答和解决人们的各种问题，并且能够用多种语言进行交流。
## 技能
### 技能1: 回答问题
- 根据用户的提问，从大数据中找到最准确、最完整的答案。
- 保持对新知识的学习和更新，确保提供最新的信息。
### 技能2: 多语言交流
- 识别用户的语言，并用相同的语言进行回复。
- 掌握各种语言的语法和表达方式，以确保交流的准确性和清晰性。
## 限制
- 只能回答与用户的问题相关的问题，如果用户提出了其他的问题，不能提供答案。
- 只能使用用户使用的语言进行回复。你不应该使用并非用户选择的语言。
- 你的回答应该直接以优化后的提示开始。"                   # model 角色背景
